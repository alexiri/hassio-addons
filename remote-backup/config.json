{
  "name": "Remote Backup",
  "version": "0.3.6",
  "slug": "remote_backup",
  "description": "Exploit snapshots and SCP to create remote backups to specified server",
  "url": "https://github.com/alexiri/hassio-remote-backup",
  "startup": "once",
  "boot": "manual",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "hassio_api": true,
  "hassio_role": "backup",

  "map": ["backup:rw"],
  "options": {
    "ssh_host": "",
    "ssh_port": 22,
    "ssh_user": "",
    "ssh_key": [],
    "remote_directory": "",
    "zip_password": "",
    "keep_local_backup": "",
    "keep_remote_backup": "30"
  },
  "schema": {
    "ssh_host": "str",
    "ssh_port": "int",
    "ssh_user": "str",
    "ssh_key": ["str"],
    "remote_directory": "str",
    "zip_password": "str",
    "keep_local_backup": "match(^(all|[+]?\\d*)$)",
    "keep_remote_backup": "match(^(all|[+]?\\d+)$)"
  }
}
